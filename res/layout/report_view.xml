<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/relativeLayoutBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10px"
            android:background="#000"
            android:text="Back"
            android:textSize="28px"
            android:textStyle="bold" />

        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10px"
            android:background="#000"
            android:text="Save"
            android:textSize="28px"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/pullToRefreshScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textviewHeaderRecentDocs"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_alignParentLeft="true"
                android:background="#0000"
                android:gravity="center"
                android:text="Report"
                android:textColor="#fff"
                android:textSize="36px" />

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="150px"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textviewHeaderRecentDocs"
                android:background="#fff" >

                <Button
                    android:id="@+id/button2"
                    android:layout_width="300px"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/button1"
                    android:layout_alignBottom="@+id/button1"
                    android:layout_marginLeft="55dp"
                    android:layout_toRightOf="@+id/button1"
                    android:text="Date"
                    android:textSize="36px" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="200px"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="27dp"
                    android:text="Daily"
                    android:textSize="36px" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textviewHeaderProjSynopsis"
                android:layout_width="match_parent"
                android:layout_height="40px"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relativeLayout3"
                android:background="#0000"
                android:gravity="center"
                android:text="Weather"
                android:textColor="#fff"
                android:textSize="36px" />

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textviewHeaderProjSynopsis"
                android:layout_centerHorizontal="true"
                android:background="#fff"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10px"
                        android:text="Wind : "
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:padding="10px"
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150px"
                        android:padding="10px"
                        android:text="Temp : "
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:padding="10px"
                        android:textSize="36px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textviewHeaderprogress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10px"
                        android:text="Precip : "
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/textviewHeaderUpcomingItems"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:padding="10px"
                        android:text=""
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/textviewHeaderRecentItems"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="150px"
                        android:padding="10px"
                        android:text="Humidity : "
                        android:textSize="36px" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="100px"
                        android:layout_height="wrap_content"
                        android:padding="10px"
                        android:text=""
                        android:textSize="36px" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10px"
                        android:text="Light Rain until evening."
                        android:textSize="36px" />

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200px"
                        android:src="@drawable/ic_launcher" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linearLayout1"
                android:background="#0000"
                android:gravity="center"
                android:text="Personnel on site"
                android:textColor="#fff"
                android:textSize="36px" />

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true"
                android:background="#fff"
                android:gravity="center"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/button3"
                    android:layout_width="600px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:text="Tap to add personnel"
                    android:textColor="#fff" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="600px"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20px"
                    android:layout_marginTop="20px"
                    android:text="Prefill from last report"
                    android:textColor="#000" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linearLayout2"
                android:layout_centerHorizontal="true"
                android:background="#0000"
                android:gravity="center"
                android:text="Photos"
                android:textColor="#fff"
                android:textSize="36px" />

            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView9"
                android:layout_centerHorizontal="true" >

                <LinearLayout
                    android:id="@+id/linearlayoutLin2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0000"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/photogallery"
                        android:layout_width="102px"
                        android:layout_height="102px"
                        android:layout_margin="15px"
                        android:src="@drawable/library_btn" />

                    <ImageView
                        android:id="@+id/camera"
                        android:layout_width="102px"
                        android:layout_height="102px"
                        android:layout_margin="15px"
                        android:src="@drawable/camera_btn" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView9"
                android:layout_below="@+id/horizontalScrollView1"
                android:background="#0000"
                android:gravity="center"
                android:text="Notes"
                android:textColor="#fff"
                android:textSize="36px" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="200px"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/textView10"
                android:layout_centerHorizontal="true"
                android:ems="10" >
            </EditText>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>