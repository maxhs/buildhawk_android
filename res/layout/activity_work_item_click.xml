                <Button
                    android:id="@+id/location_btn"
                    android:layout_width="match_parent"
                    android:layout_height="130px"                   
                    android:layout_marginRight="15px"
                    android:layout_marginLeft="15px"
                    android:background="@drawable/wide_button"
                    android:text=""
                    android:hint="Location:"
                    android:textColor="@color/black"
                    android:textSize="40px" />

                <Button
                    android:id="@+id/assigned_btn"
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:layout_marginBottom="2px"
                    android:layout_marginRight="15px"
                    android:layout_marginLeft="15px"
                    android:background="@drawable/wide_button"
                    android:hint="Assign task"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/textviewHeaderUpcomingItems"
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@color/white"
                    android:text="" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:gravity="center_vertical"
                    android:weightSum="3" >

                    <ImageView
                        android:id="@+id/email"
                        android:layout_width="217px"
                        android:layout_height="154px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="15px"
                        android:scaleType="fitXY"
                        android:src="@drawable/email_btn" />

                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="217px"
                        android:layout_height="154px"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="15px"
                        android:scaleType="fitXY"
                        android:src="@drawable/call_btn" />

                    <ImageView
                        android:id="@+id/message"
                        android:layout_width="217px"
                        android:layout_height="154px"
                        android:layout_alignBaseline="@+id/message"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="15px"
                        android:scaleType="fitXY"
                        android:src="@drawable/text_btn" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textviewHeaderRecentItems"
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@color/white"
                    android:text="" />
				<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:background="@drawable/background_draw" >
                    
                    <ImageView
                                android:id="@+id/reminder"
                                android:layout_width="155px"
                                android:layout_height="155px"
                                android:layout_margin="15px"
                                android:layout_centerVertical="true"
                                
                                android:src="@drawable/clock" />
                    <TextView
                    android:id="@+id/txtReminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="36px"
                    android:textColor="@color/black"
                    android:layout_toRightOf="@+id/reminder"
                    android:layout_marginLeft="20px"
                    android:text="Reminder"
                    android:layout_marginTop="60px"
                    android:gravity="center"
                     />
                    
                </RelativeLayout>
                
				<TextView
                    android:id="@+id/textviewHeaderRecentItems"
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@color/white"
                    android:text="" />
				
                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_draw" >

                    <EditText
                        android:id="@+id/commentBody"
                        android:layout_width="520px"
                        android:layout_height="150px"
                        android:ems="10"
                        android:gravity="top|left"
                        android:hint="Add a comment..."
                        android:paddingLeft="15px"
                        android:paddingRight="15px"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textCursorDrawable="@drawable/color_cursor"
                        android:textSize="30px" >

                        
                    </EditText>

                    <Button
                        android:id="@+id/sendcomment"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Send"
                        android:textSize="36px"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="" />

                <ListView
                    android:id="@+id/commentslist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>

                <LinearLayout
                    android:id="@+id/lin3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>