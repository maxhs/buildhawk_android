<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rellayworkitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckItemClick" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:gravity="center" >

            <Button
                android:id="@+id/relativeLayoutBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10px"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="Back"
                	android:textStyle="bold"
                android:textSize="36px" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10px"
                android:background="@color/black"
                android:textColor="@color/white"
                android:text="Save"
                	android:textStyle="bold"
                android:textSize="36px" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/pullToRefreshScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_draw"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200px"
                        android:background="@drawable/background_draw"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/txt_body"
                            android:layout_width="520px"
                            android:layout_height="200px"
                           
                            
                            android:gravity="top|left"
                            android:padding="15px"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:textSize="36px" />

                        <Button
                            android:id="@+id/btnComplete"
                            android:layout_width="200px"
                            android:layout_height="200px"
                            android:background="@drawable/markcomplete"
                            android:textColor="@color/black"
                            android:text="Mark Complete"
                            android:textSize="36px" />
                    </LinearLayout>
                </LinearLayout>
				<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_draw" >
							<ImageView
                                android:id="@+id/photogallery"
                                android:layout_width="102px"
                                android:layout_height="102px"
                                android:layout_margin="15px"
                                android:layout_centerVertical="true"
                                android:src="@drawable/library_btn" />

                            <ImageView
                                android:id="@+id/camera"
                                android:layout_width="102px"
                                android:layout_height="102px"
                                android:layout_margin="15px"
                                android:layout_toRightOf="@+id/photogallery"
                                android:layout_centerVertical="true"
                                android:src="@drawable/camera_btn" />
                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/camera" >

                        <LinearLayout
                            android:id="@+id/linearlayoutLin2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            
                        </LinearLayout>
                    </HorizontalScrollView>
                </RelativeLayout>
