<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rellayworkitem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckItemClick" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:gravity="center" >

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10px"
                android:background="@color/black"
                android:text="Back"
                	android:textStyle="bold"
                android:textSize="28px" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10px"
                android:background="@color/black"
                android:text="Save"
                	android:textStyle="bold"
                android:textSize="28px" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_draw"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="200px"
                        android:background="@drawable/background_draw"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/txt_body"
                            android:layout_width="520px"
                            android:layout_height="200px"
                            android:textCursorDrawable="@drawable/color_cursor"
                            android:gravity="top|left"
                            android:padding="15px"
                            android:textColor="@color/black"
                            android:textSize="36px" />

                        <Button
                            android:id="@+id/btnComplete"
                            android:layout_width="200px"
                            android:layout_height="200px"
                            android:background="@drawable/markcomplete"
                            android:textColor="@color/black"
                            android:text="Mark Complete"
                            android:textSize="36px" />
                    </LinearLayout>
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_draw" >

                    <LinearLayout
                        android:id="@+id/scrolllayout2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/photogallery"
                            android:layout_width="102px"
                            android:layout_height="102px"
                            android:layout_margin="15px"
                            android:src="@drawable/library_btn" />

                        <ImageView
                            android:id="@+id/camera"
                            android:layout_width="102px"
                            android:layout_height="102px"
                            android:layout_margin="15px"
                            android:src="@drawable/camera_btn" />
                    </LinearLayout>
                </HorizontalScrollView>

                <Button
                    android:id="@+id/location_btn"
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:layout_marginBottom="4px"
                    android:background="@drawable/wide_button"
                    android:text="Location:"
                    android:textColor="@color/black"
                    android:textSize="40px" />

                <Button
                    android:id="@+id/assigned_btn"
                    android:layout_width="match_parent"
                    android:layout_height="130px"
                    android:layout_marginBottom="2px"
                    android:background="@drawable/wide_button"
                    android:text="Assigned:"
                    android:textColor="@color/black"
                    android:textSize="40px" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@color/white"
                    android:text="" />

                <RelativeLayout
                    android:id="@+id/RelativeLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_draw"
                    android:gravity="center_vertical"
                    android:weightSum="3" >

                    <ImageView
                        android:id="@+id/email"
                        android:layout_width="217px"
                        android:layout_height="154px"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="15px"
                        android:scaleType="fitXY"
                        android:src="@drawable/email_btn" />

                    <ImageView
                        android:id="@+id/call"
                        android:layout_width="217px"
                        android:layout_height="154px"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="15px"
                        android:scaleType="fitXY"
                        android:src="@drawable/call_btn" />

                    <ImageView
                        android:id="@+id/message"
                        android:layout_width="217px"
                        android:layout_height="154px"
                        android:layout_alignBaseline="@+id/message"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="15px"
                        android:scaleType="fitXY"
                        android:src="@drawable/text_btn" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="20px"
                    android:background="@color/white"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_draw" >

                    <EditText
                        android:id="@+id/commentBody"
                        android:layout_width="520px"
                        android:layout_height="150px"
                        android:ems="10"
                        android:gravity="top|left"
                        android:hint="Add comments..."
                        android:paddingLeft="15px"
                        android:paddingRight="15px"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textSize="30px" >

                        <requestFocus />
                    </EditText>

                    <Button
                        android:id="@+id/sendcomment"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Send"
                        android:textSize="36px"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="" />

                <ListView
                    android:id="@+id/commentslist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                </ListView>

                <LinearLayout
                    android:id="@+id/lin3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:text="" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>