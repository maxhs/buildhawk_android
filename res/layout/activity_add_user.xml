<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".AddUser" >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="115px"
        android:background="#000"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/txt_company"
                android:layout_width="150px"
                android:layout_height="90px"
                android:gravity="center"
                android:text="company"
                android:textColor="@color/white"
                android:textSize="30px"
                android:textStyle="bold"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/all_btn_click" >

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="58px"
                android:layout_height="58px"
                android:layout_centerVertical="true"
                android:clickable="false"
                android:duplicateParentState="false"
                android:src="@drawable/backoff" />

            <TextView
                android:id="@+id/clickedOn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back_img"
                android:text="Back"
                android:textColor="@color/white"
                android:textSize="36px"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/shaded_gray"
        android:padding="30px"
        android:text="Please enter the email/phone number of\nthe person you&apos;d like to add, or simply\npull their info from your address book."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:textSize="36px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/pullcontacts"
            android:layout_width="match_parent"
            
            android:layout_height="100px" >

            <ImageView
                android:id="@+id/img_contacts"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/txt_contacts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/img_contacts"
                android:text="Pull from address book"
                android:textSize="36px" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/shaded_gray"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="100px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout02"
            android:layout_width="match_parent"
            android:layout_height="100px" >

            <ImageView
                android:id="@+id/email"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:src="@drawable/email_btn" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/email"
                android:text=""
                android:hint="Email address"
                android:textSize="36px" />

            <TextView
                android:id="@+id/TextView04"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@color/shaded_gray"
                android:layout_marginLeft="100px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RelativeLayout01"
            android:layout_width="match_parent"
            android:layout_height="100px" >

            <ImageView
                android:id="@+id/phone"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerVertical="true"
                android:src="@drawable/mobile" />

            <TextView
                android:id="@+id/txt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:layout_toRightOf="@+id/phone"
                android:text=""
                android:hint="Phone number"
                android:textSize="36px" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="100px" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/shaded_gray"
            android:layout_alignParentBottom="true"
            android:text="CONTACT INFO"
            android:textSize="36px"
            android:textColor="@color/black"
            android:gravity="center"
           
             />
        
        <TextView
            android:id="@+id/firstname"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white"
            android:padding="20px"
            android:text="first name"
            android:textSize="36px"
            android:textColor="@color/black"
            android:gravity="center_vertical|left"
           
             />
        <TextView
                android:id="@+id/TextView06"
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_alignParentBottom="true"
                android:background="@color/shaded_gray"
                android:layout_marginLeft="20px" />
        <TextView
            android:id="@+id/lastname"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white"
           android:padding="20px"
            android:text="last name"
            android:textSize="36px"
            android:textColor="@color/black"
           android:gravity="center_vertical|left"
           
             />
        <TextView
                android:id="@+id/TextView05"
                android:layout_width="match_parent"
                android:layout_height="2px"
                
                android:background="@color/shaded_gray"
                android:layout_marginLeft="20px" />
        <TextView
            android:id="@+id/companyname"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@color/white"
        	android:padding="20px"
            android:text="company name"
            android:textSize="36px"
            android:textColor="@color/black"
            android:gravity="center_vertical|left"
           
             />

    </LinearLayout>

</LinearLayout>
