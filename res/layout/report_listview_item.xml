<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="250px"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="20px" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="10px"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/daily_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Report - "
                android:textColor="@color/black"
                android:textSize="@dimen/report_list"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/daily_report_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/black"
                android:textSize="@dimen/report_list"
                
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/personnel_onsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Personnel onsite: "
                android:textColor="@color/black"
                android:textSize="@dimen/report_list" />

            <TextView
                android:id="@+id/personnel_value"
                android:layout_width="150px"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/report_list" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/edittextNotes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes: "
                android:textColor="@color/black"
                android:textSize="@dimen/report_list" />

            <TextView
                android:id="@+id/notes_value"
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="N/A"
                android:textColor="@color/black"
                android:textSize="@dimen/report_list" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px" >

        <ImageView
            android:id="@+id/report_photo"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_marginTop="20px" />

        <TextView
            android:id="@+id/report_photo_value"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20px"
            android:background="@drawable/round"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="30px"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>