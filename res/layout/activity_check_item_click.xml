<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rellay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckItemClick" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="115px"
            android:gravity="center" >

            <Button
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10px"
                android:background="@color/black"
                android:text="Back"
                android:textSize="28px"
                android:textStyle="bold" />

            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10px"
                android:background="@color/black"
                android:text="Save"
                android:textSize="28px"
                android:textStyle="bold" />
        </RelativeLayout>

        <ScrollView
            android:id="@+id/scrollView1_checkitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/shaded_gray"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt_type"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:padding="15px"
                    android:text="SnC"
                    android:textSize="36px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_draw"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txt_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="15px"
                        android:text="Construction should have :\n Full set of \n Working Drawings"
                        android:textColor="@color/black"
                        android:textSize="36px" />

                    <RelativeLayout
                        android:id="@+id/RelativeLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:weightSum="3" >

                        <ImageView
                            android:id="@+id/email"
                            android:layout_width="217px"
                            android:layout_height="154px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="15px"
                            android:scaleType="fitXY"
                            android:src="@drawable/email_btn" />

                        <ImageView
                            android:id="@+id/call"
                            android:layout_width="217px"
                            android:layout_height="154px"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="15px"
                            android:scaleType="fitXY"
                            android:src="@drawable/call_btn" />

                        <ImageView
                            android:id="@+id/message"
                            android:layout_width="217px"
                            android:layout_height="154px"
                            android:layout_alignBaseline="@+id/message"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="15px"
                            android:scaleType="fitXY"
                            android:src="@drawable/text_btn" />
                    </RelativeLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_draw"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/complete_btn"
                        android:layout_width="match_parent"
                        android:layout_height="130px"
                        android:src="@drawable/transparentclick"
                        android:text="COMPLETED"
                        android:textColor="@color/black"
                        android:textSize="40px" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginLeft="50px"
                        android:background="@color/shaded_gray" >
                    </RelativeLayout>

                    <Button
                        android:id="@+id/progress_btn"
                        android:layout_width="match_parent"
                        android:layout_height="130px"
                        android:src="@drawable/transparentclick"
                        android:text="IN-PROGRESS"
                        android:textColor="@color/black"
                        android:textSize="40px" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:layout_marginLeft="50px"
                        android:background="@color/shaded_gray" >
                    </RelativeLayout>

                    <Button
                        android:id="@+id/notApplicable_btn"
                        android:layout_width="match_parent"
                        android:layout_height="130px"
                        android:src="@drawable/transparentclick"
                        android:text="NOT APPLICABLE"
                        android:textColor="@color/black"
                        android:textSize="40px" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shaded_gray"
                    android:text="" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/background_draw" >

                    <HorizontalScrollView
                        android:id="@+id/horizontalScrollView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:id="@+id/scrolllayout2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/photogallery"
                                android:layout_width="102px"
                                android:layout_height="102px"
                                android:layout_margin="15px"
                                android:src="@drawable/library_btn" />

                            <ImageView
                                android:id="@+id/camera"
                                android:layout_width="102px"
                                android:layout_height="102px"
                                android:layout_margin="15px"
                                android:src="@drawable/camera_btn" />
                        </LinearLayout>
                    </HorizontalScrollView>
                </RelativeLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shaded_gray"
                    android:text="" />

                <LinearLayout
                    android:id="@+id/LinearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_draw"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/commentBody"
                        android:layout_width="520px"
                        android:layout_height="150px"
                        android:ems="10"
                        android:hint="Add comments..."
                        android:paddingLeft="15px"
                        android:paddingRight="15px"
                        android:singleLine="false"
                        android:textColor="@color/black"
                        android:textSize="30px" >
                    </EditText>

                    <Button
                        android:id="@+id/sendcomment"
                        android:layout_width="200px"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Send"
                        android:textSize="36px"
                        android:visibility="gone" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shaded_gray"
                    android:text="" />

                <ListView
                    android:id="@+id/commentslist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:longClickable="false" >
                </ListView>

                <LinearLayout
                    android:id="@+id/lin3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shaded_gray"
                    android:text="" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>