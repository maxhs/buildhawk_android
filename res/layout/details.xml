<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayoutRootDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="115px"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:id="@+id/relativelayoutText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/textviewProName"
                android:layout_width="300px"
                android:layout_height="90px"
                android:gravity="center"
                android:text="Medium Text"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="36px" />

            

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayoutBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/all_btn_click"
             >

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="58px"
                android:layout_height="58px"
               android:layout_centerVertical="true"
                android:clickable="false"
                android:duplicateParentState="false"
                android:src="@drawable/backoff" />
        </RelativeLayout>
        
        <Button
                android:id="@+id/buttonSelectdate"               
                android:layout_width="90px"
                android:layout_height="90px"
                android:background="@drawable/calendar"
                android:layout_centerVertical="true"
                android:text=""
                android:layout_marginLeft="30px"
                android:layout_toRightOf="@+id/relativelayoutText"
                android:textSize="30px"
                android:visibility="gone" 
                />

        <ImageView
            android:id="@+id/imageviewSearchimg"
            android:layout_width="46px"
            android:layout_height="46px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10px"
            android:src="@drawable/search" />

        <ImageView
            android:id="@+id/imageviewAddWorkitem"
            android:layout_width="58px"
            android:layout_height="58px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/add"
            android:visibility="gone"
            android:layout_marginRight="10px"
            android:tag="mwar" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/botBtn"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/relativelayoutChecklist"
            android:layout_width="180px"
            android:layout_height="120px"
            android:layout_marginTop="2px"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/imageviewChecklistimg"
                android:layout_width="56px"
                android:layout_height="43px"
              android:layout_marginBottom="4px"
                android:layout_centerHorizontal="true"
            android:layout_above="@+id/textviewChecklisttxt"
                android:tag="mwar"
                android:clickable="false"
                android:src="@drawable/btmcheck_off" />

            <TextView
                android:id="@+id/textviewChecklisttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Checklists"
                android:clickable="false"
                android:layout_marginBottom="4px"
                android:textColor="@color/black"
                android:textSize="32px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayoutDocument"
            android:layout_width="180px"
            android:layout_height="120px"
            android:layout_marginTop="2px"
            android:background="@color/black" >

            <ImageView
                android:id="@+id/imageviewDocumentimg"
                android:layout_width="60px"
                android:layout_height="49px"
                android:layout_marginBottom="4px"
                android:layout_centerHorizontal="true"
            	android:layout_above="@+id/textviewDocumenttxt"
                android:clickable="false"
                android:tag="mwar"
                android:src="@drawable/btmdocs_on" />

            <TextView
                android:id="@+id/textviewDocumenttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4px"
                android:text="Documents"
                android:textColor="@color/white"
                android:textSize="32px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayoutReport"
            android:layout_width="180px"
            android:layout_height="120px"
            android:layout_marginTop="2px"
            android:background="@color/black" >

            <ImageView
                 android:id="@+id/imageviewReportimg"
                android:layout_width="58px"
                android:layout_height="58px"
                android:layout_marginBottom="4px"
                android:layout_centerHorizontal="true"
           	 	android:layout_above="@+id/textviewReporttxt"
                android:clickable="false"
                android:tag="mwar"
                android:src="@drawable/btmreports_on" />

            <TextView
                android:id="@+id/textviewReporttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Reports"
                android:layout_marginBottom="4px"
                android:textColor="@color/white"
                android:textSize="32px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayoutWorklist"
            android:layout_width="180px"
            android:layout_height="120px"
            android:layout_marginTop="2px"
            android:background="@color/black" >

            <ImageView
                 android:id="@+id/imageviewWorklistimg"
                android:layout_width="70px"
                android:layout_height="48px"
                android:layout_marginBottom="4px"
                android:layout_centerHorizontal="true"
            	android:layout_above="@+id/textviewWorklisttxt"
                android:clickable="false"
                android:tag="mwar"
                android:src="@drawable/btmworklist_on" />

            <TextView
                android:id="@+id/textviewWorklisttxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Tasks"
                android:layout_marginBottom="4px"
                android:textColor="@color/white"
                android:textSize="32px" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/botBtn" 
        android:visibility="visible"/>
