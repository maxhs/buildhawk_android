<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rellay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="115px"
        android:layout_alignParentTop="true"
        android:background="#000"
        android:gravity="center_vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/proName"
                android:layout_width="300px"
                android:layout_height="90px"
                android:gravity="center"
                android:text="Medium Text"
                	android:textStyle="bold"
                android:textSize="36px" />

            <Button
                android:id="@+id/selectdate"
                style="?android:attr/buttonStyleSmall"
                	android:textStyle="bold"
                android:layout_width="80px"
                android:layout_height="80px"
               android:background="@drawable/calendar"
                android:text=""
                android:textSize="30px"
                android:visibility="gone" 
                android:layout_toRightOf="@+id/proName"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/all_btn_click"
             >

            <ImageView
                android:id="@+id/back_img"
                android:layout_width="58px"
                android:layout_height="58px"
               android:layout_centerVertical="true"
                android:clickable="false"
                android:duplicateParentState="false"
                android:src="@drawable/backoff" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/addWorkitem"
            android:layout_width="58px"
            android:layout_height="58px"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:src="@drawable/add"
            android:layout_marginRight="10px"
            android:tag="mwar" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/botBtn"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/checklist"
            android:layout_width="180px"
            android:layout_height="120px"
            android:layout_marginTop="2px"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/checklist_img"
                android:layout_width="56px"
                android:layout_height="43px"
              android:layout_marginBottom="4px"
                android:layout_centerHorizontal="true"
            android:layout_above="@+id/checklist_txt"
                android:tag="mwar"
                android:clickable="false"
                android:src="@drawable/btmcheck_off" />

            <TextView
                android:id="@+id/checklist_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Checklists"
                android:clickable="false"
                android:layout_marginBottom="4px"
                android:textColor="@color/black"
                android:textSize="32px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/documents"
            android:layout_width="180px"
            android:layout_height="120px"
            android:layout_marginTop="2px"
            android:background="@color/black" >

            <ImageView
                android:id="@+id/documents_img"
                android:layout_width="60px"
                android:layout_height="49px"
                android:layout_marginBottom="4px"
                android:layout_centerHorizontal="true"
            	android:layout_above="@+id/documents_txt"
                android:clickable="false"
                android:tag="mwar"
                android:src="@drawable/btmdocs_on" />

            <TextView
                android:id="@+id/documents_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="4px"
                android:text="Documents"
                android:textColor="@color/white"
                android:textSize="32px" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/reports"
            android:layout_width="180px"
            android:layout_height="120px"
            android:layout_marginTop="2px"
            android:background="@color/black" >

            <ImageView
                 android:id="@+id/reports_img"
                android:layout_width="58px"
                android:layout_height="58px"
                android:layout_marginBottom="4px"
                android:layout_centerHorizontal="true"
           	 	android:layout_above="@+id/reports_txt"
                android:clickable="false"
                android:tag="mwar"
                android:src="@drawable/btmreports_on" />

            <TextView
                android:id="@+id/reports_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Reports"
                android:layout_marginBottom="4px"
                android:textColor="@color/white"
                android:textSize="32px" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/worklist"
            android:layout_width="180px"
            android:layout_height="120px"
            android:layout_marginTop="2px"
            android:background="@color/black" >

            <ImageView
                 android:id="@+id/worklist_img"
                android:layout_width="70px"
                android:layout_height="48px"
                android:layout_marginBottom="4px"
                android:layout_centerHorizontal="true"
            	android:layout_above="@+id/worklist_txt"
                android:clickable="false"
                android:tag="mwar"
                android:src="@drawable/btmworklist_on" />

            <TextView
                android:id="@+id/worklist_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="Worklist"
                android:layout_marginBottom="4px"
                android:textColor="@color/white"
                android:textSize="32px" />
        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/botBtn" 
        android:visibility="visible"/>

</RelativeLayout>